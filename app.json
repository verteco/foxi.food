{
  "name": "foxi-food",
  "services": [
    {
      "name": "backend",
      "dockerfile_path": "backend/Dockerfile",
      "source_dir": "backend",
      "github": {
        "branch": "main",
        "deploy_on_push": true,
        "repo": "verteco/foxi.food"
      },
      "http_port": 8000,
      "instance_count": 1,
      "instance_size_slug": "basic-xs",
      "routes": [
        {
          "path": "/api"
        }
      ],
      "run_command": "gunicorn --bind 0.0.0.0:8000 foxi_food_backend.wsgi:application",
      "envs": [
        {
          "key": "DEBUG",
          "value": "False"
        },
        {
          "key": "ALLOWED_HOSTS",
          "value": "www.foxi.food,foxi.food,.ondigitalocean.app,localhost"
        },
        {
          "key": "DATABASE_URL",
          "scope": "RUN_TIME",
          "value": "${db.DATABASE_URL}"
        }
      ]
    },
    {
      "name": "frontend",
      "dockerfile_path": "frontend/Dockerfile",
      "source_dir": "frontend",
      "github": {
        "branch": "main",
        "deploy_on_push": true,
        "repo": "verteco/foxi.food"
      },
      "http_port": 80,
      "instance_count": 1,
      "instance_size_slug": "basic-xs",
      "routes": [
        {
          "path": "/"
        }
      ],
      "envs": [
        {
          "key": "REACT_APP_API_URL",
          "value": "${APP_URL}/api"
        }
      ]
    }
  ],
  "databases": [
    {
      "name": "db",
      "engine": "PG",
      "version": "15",
      "production": false
    }
  ]
}
